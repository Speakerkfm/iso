worker_processes  1;

events {
    worker_connections  1024;
}

http {
    keepalive_timeout  65;

    server {
        listen 82 http2;
        server_name *.localhost;

        location / {
            grpc_pass grpc://{{ .ISOServerHost }};
            grpc_set_header {{ .HeaderHost }} $host;
            grpc_set_header {{ .HeaderRequestID }} $request_id;
        }
    }

    include servers/*;
}
